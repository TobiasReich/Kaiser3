<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootBorderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.tobiasreich.kaiser.UIControllerGameMenu">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="_Game">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuNewGameClick" text="New Game" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuLoadGameClick" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuSaveGameClick" text="Save" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuPreferencesClick" text="Preferences" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuAboutClick" text="About" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuHelpClick" text="Help" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
