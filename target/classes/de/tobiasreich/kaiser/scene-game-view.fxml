<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="rootBorderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.tobiasreich.kaiser.UIControllerGame">

    <left>
        <VBox fillWidth="false" style="-fx-background-color: #FFFF00;" BorderPane.alignment="CENTER">
            <children>
                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onWheatButtonClick" prefWidth="110.0" text="Getreide">
                    <graphic>
                        <ImageView fx:id="gameFoodButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/icon_wheat.png">
                                </Image>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onLandButtonClick" prefWidth="110.0" text="Land">
                    <graphic>
                        <ImageView fx:id="gameLandButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/icon_land.png">
                                </Image>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onTaxButtonClick" prefWidth="110.0" text="Steuern">
                    <graphic>
                        <ImageView fx:id="taxButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/icon_coin.png">
                                </Image>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            <Separator />

                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onTaxButtonClick" prefWidth="110.0" text="MilitÃ¤r">
                    <graphic>
                        <ImageView fx:id="militaryButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/icon_coin.png">
                                </Image>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onTaxButtonClick" prefWidth="110.0" text="Steuern">
                    <graphic>
                        <ImageView fx:id="sabotageButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/icon_coin.png">
                                </Image>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onTaxButtonClick" prefWidth="110.0" text="Steuern">
                    <graphic>
                        <ImageView fx:id="maneuverButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/icon_coin.png">
                                </Image>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </children>
        </VBox>
    </left>

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="_Game">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuNewGameClick" text="New Game" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuLoadGameClick" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuSaveGameClick" text="Save" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuPreferencesClick" text="Preferences" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuAboutClick" text="About" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuHelpClick" text="Help" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <right>
        <VBox alignment="TOP_RIGHT" prefWidth="250.0" BorderPane.alignment="TOP_RIGHT">
            <children>
                <BarChart fx:id="populationChart" animated="false" legendVisible="false" maxHeight="250.0" maxWidth="1.7976931348623157E308" title="Population">
                    <xAxis>
                        <CategoryAxis animated="false" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis animated="false" side="LEFT" />
                    </yAxis>
                </BarChart>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="%game_summary_title">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <GridPane alignment="CENTER" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
            
               <children>
                   <Label maxWidth="1.7976931348623157E308" text="%game_summary_money" GridPane.columnIndex="0">
                     <GridPane.margin>
                        <Insets right="10.0" />
                     </GridPane.margin>
                   </Label>
                   <Label fx:id="gameSummaryMoneyPossessionLabel" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="" GridPane.columnIndex="1" />

                   <Label maxWidth="1.7976931348623157E308" text="%game_summary_food" GridPane.columnIndex="0" GridPane.rowIndex="1">
                       <GridPane.margin>
                           <Insets right="10.0" />
                       </GridPane.margin>
                   </Label>
                   <Label fx:id="gameSummaryFoodPossessionLabel" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                   <Label maxWidth="1.7976931348623157E308" text="%game_summary_inhabitants" GridPane.columnIndex="0" GridPane.rowIndex="2">
                       <GridPane.margin>
                           <Insets right="10.0" />
                       </GridPane.margin>
                   </Label>
                   <Label fx:id="gameSummaryInhabitantsLabel" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                   <Label maxWidth="1.7976931348623157E308" text="%game_summary_happyness" GridPane.columnIndex="0" GridPane.rowIndex="3">
                       <GridPane.margin>
                           <Insets right="10.0" />
                       </GridPane.margin>
                   </Label>
                   <Label fx:id="gameSummaryHappinessLabel" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                   <Label maxWidth="1.7976931348623157E308" text="%game_summary_land_possession" GridPane.columnIndex="0" GridPane.rowIndex="4">
                       <GridPane.margin>
                           <Insets right="10.0" />
                       </GridPane.margin>
                   </Label>
                   <Label fx:id="gameSummaryLandPossessionLabel" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
            </children>
         <padding>
            <Insets right="10.0" />
         </padding>
        </VBox>
    </right>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefWidth="200.0" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <Button mnemonicParsing="false" onAction="#onEndTurnClick" text="End Turn" />
            </children>
        </HBox>
    </bottom>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #060;" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
